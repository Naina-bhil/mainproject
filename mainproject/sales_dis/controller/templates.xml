                <h1>Add New Sales Person</h1>
                <form action="/sp_submit" method="POST">
                    <div id="customer">
                        <div class="form-group">
                            <label for="sname">Name:</label>
                            <input type="text" class="form-control" placeholder="Enter Name" name="sname" id="sname" required="true"/>
                        </div>
                        <div class="form-group">
                            <label for="s_unm">Email:</label>
                            <input type="email" class="form-control" placeholder="Enter email" name="s_unm" id="s_unm" required="true"/>
                        </div>
                        <div class="form-group">
                            <label for="s_address">Address:</label>
                            <input type="text" class="form-control" placeholder="Enter Address" name="s_address" id="s_address" required="true"/>
                        </div>
                        <div class="form-group">
                            <label for="s_mobno">Mobile Number:</label>
                            <input type="text" class="form-control" placeholder="Enter Mobile Number" name="s_mobno" id="s_mobno" required="true"/>
                        </div>
                        <div class="form-group">
                            <label for="s_pass">Password:</label>
                            <input type="password" t-model="state.pwd" t-on-keyup="_onKeyUpPwd" class="form-control" placeholder="Enter password" name="s_pass" id="s_pass" required="true"/>
                        </div>
                        <div class="form-group">
                            <label for="s_repwd">Re-Enter Password:</label>
                            <input type="password" t-model="state.repwd" t-on-keyup="_onKeyUpRePwd" class="form-control" placeholder="Enter password" name="s_repwd" id="s_repwd" required="true"/>
                        </div>
                        <div class="form-group">
                            <label for="s_role">Role:</label>
                            <input type="text" class="form-control" value="Sales Person" name="s_role" id="s_role" required="true"/>
                        </div>
                        <button type="submit" class="btn btn-secondary text-white ml-2">Register</button>
                    </div>
                </form>
            </div>
            <t t-call="sales_dis.footer">
            </t>
        </t>
    </template>
    <template id="add_zone">
        <t t-call="web.layout">
