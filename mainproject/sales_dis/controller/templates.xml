    <template id="avl_product">
        <t t-call="web.layout">
            <t t-call="sales_dis.header">
            </t>
            <!-- <form action="/profile_submit" method="POST"> -->
                <div class="container">  
                    <div class="mt-5 mb-5">
                        <h1>List of Available products </h1> 
                    </div>
                    <div>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Product name</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="products" t-as="product">
                                    <tr>
                                        <td><t t-esc="product.p_name"/></td>
                                        <td><t t-esc="product.p_price"/></td>
                                        <td><button type="submit" class="btn btn-primary" t-att-id="product.p_name" t-on-click="do_order">Order</button></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                    <!-- <div align="right">
                        <button class="btn btn-primary mr-2" href="#" t-on-click="loginhome()">Back</button>
                    </div> -->
                </div>
            <!-- </form> -->
            <t t-call="sales_dis.footer">
            </t>
        </t>
    </template>
    <template id="do_payment">
        <t t-call="web.layout">
            <t t-call="sales_dis.header">
            </t>
                <div class="container">
                    <div class="d-flex justify-content-center h-100">
                        <div class="card">
                            <div class="card-header">
                                <h3 align="center">Payment</h3>
                            </div>
                            <div class="card-body">
                                <form action="/payment">
                                    <h3 align="center">Payment</h3>
                                    <div class="d-flex justify-content-center links">
                                        see previous payments <a href="#" t-on-click="payment_list">See List</a>
                                    </div>
                                    <p>Choose any Payment Method Either Cash or Cheque</p>
                                    <div class="panel-group">
                                        <input type="radio" id="cash" name="payment" value="Cash" t-on-click="show1()"/>Cash
                                        <input type="radio" id="cheque" name="payment" value="Cheque" t-on-click="show2()"/>Cheque 
                                    </div>                  
                                    <div class="hideRadio" id="paycash">
                                        <h4><b>Payment By Cash</b></h4>
                                        <div class="form-group">
                                            <label for="cars">Enter Amount :</label>
                                            <input type="text" class="form-control" name="amount" placeholder="Enter Amount" id="Amount"/>  
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary">Cash</button>
                                        </div>
                                    </div>  
                                    <div class="hideRadio" id="paycheque">
                                        <h4><b>Payment By Cheque</b></h4>
                                        <div class="form-group">
                                            <p><u>Fill Information</u></p>
                                            <input type="text" name="cheque" placeholder="check Number" id="cqnum"/>
                                        </div>
                                        <div class="form-group">
                                            <input type="text" name="bankname" placeholder="Bank Name" id="bank"/>
                                        </div>
                                        <div class="form-group">
                                            <input type="text" name="amount" placeholder="Amount" id="amnt"/>  
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary">Cheque</button>
                                        </div>
                                    </div> 
                                </form>
                                <div align="right">
                                    <button class="btn btn-primary mr-2" href="#" t-on-click="loginhome">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <t t-call="sales_dis.footer">
            </t>
        </t>
    </template>
    <template id="new_order">
        <t t-call="web.layout">
            <t t-call="sales_dis.header">
            </t>
            <div class="container">  
                <div class="mt-5 mb-5">
                    <h1>List of New Order </h1> 
                </div>
                <div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>order date</th>
                                <th>Order Status</th>
                                <th>Payment Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="orders" t-as="order">
                                <tr>
                                    <td><t t-esc="order.o_date"/></td>
                                    <td><t t-esc="order.o_status"/></td>
                                    <td><t t-esc="order.o_payment_status"/></td>
                                    <!-- <td>
                                        <t t-esc="i.date_order_day" />/
                                        <t t-esc="i.date_order_month" />/
                                        <t t-esc="i.date_order_year" />
                                    </td> -->
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
                <div align="right">
                    <button class="btn btn-primary mr-2" href="#" t-on-click="completed_order_list">View Completed Orders</button>
                    <button class="btn btn-primary mr-2" href="#" t-on-click="loginhome">Back</button>
                </div>
            </div>
            <t t-call="sales_dis.footer">
            </t>
        </t>
    </template>
