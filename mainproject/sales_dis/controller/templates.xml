    <template id="salesprofile">
        <t t-call="web.layout">
            <t t-call="sales_dis.header">
            </t>
            <!-- <form action="/profile_submit" method="POST"> -->
                <div class="d-flex justify-content-center mt-5">
                    <div class="card text-center" style="width:35em;">
                        <div class="card-header">
                            Sales Person Profile
                        </div>
                        <div class="card-body">
                            <table style="width:100%">
                                <t t-foreach="sales" t-as="sale">
                                    <tr>
                                        <th>Name:</th>
                                        <td><t t-esc="sale.name"/></td>
                                    </tr>
                                    <tr>
                                        <th>Email:</th>
                                        <td><t t-esc="sale.email"/></td>
                                    </tr>
                                    <tr>
                                        <th>Address:</th>
                                        <td><t t-esc="sale.address"/></td>
                                    </tr>
                                    <tr>
                                        <th>Mobile:</th>
                                        <td><t t-esc="sale.mobno"/></td>
                                    </tr>
                                </t>
                            </table>
                        </div>
                        <div class="card-footer text-muted">
                        </div>
                    </div>
                </div>
            <!-- </form> -->
            <t t-call="sales_dis.footer">
            </t>
        </t>
    </template>
